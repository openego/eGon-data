rule Main:
    conda:
        "pypsa-eur/envs/environment.yaml"
    shell:
        ( "snakemake"
          " --directory=pypsa-eur/"
          " --snakefile=pypsa-eur-sec/Snakefile"
          " -j1"
        )

rule prepare:
    conda:
        "pypsa-eur/envs/environment.yaml"
    shell:
        ( "snakemake"
          " --directory=pypsa-eur/"
          " --snakefile=pypsa-eur/Snakefile"
          " -call"
          " prepare_sector_networks"
        )

rule solve:
    conda:
        "pypsa-eur/envs/environment.yaml"
    shell:
        ( "snakemake"
          " --directory=pypsa-eur/"
          " --snakefile=pypsa-eur/Snakefile"
          " -call"
          " solve_sector_networks"
        )

rule summary:
    conda:
        "pypsa-eur/envs/environment.yaml"
    shell:
        ( "snakemake"
          " --directory=pypsa-eur/"
          " --snakefile=pypsa-eur/Snakefile"
          " -call"
          " make_summary"
        )